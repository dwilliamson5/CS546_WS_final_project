<p class="error-status">{{error_status_code}}</p>
<p class="error-message">{{error_messages}}</p>

{{!-- Show Bids --}}
<p>Bids:</p>
<ul>
    {{#each bid}}
    <li>
        <p>{{this.offer}}</p>
        <p>Name:</p>
        <p>{{this.user.name}}</p>
        <p>Username:</p>
        <p>{{this.user.username}}</p>
        <p>Rating:</p>
        <p>{{this.user.rating}}</p>
        {{!-- Accept Bid Button --}}
        <button type="submit" class="btn btn-success">Accept Bid</button>
        {{!-- If bid is accepted, show buyer information --}}
    </li>
    {{/each}}
</ul>}

<form action="/items/{{id}}/update" method="POST" id="update-item-form">
    <input name="_method" type="hidden" value="PUT" />
    
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input id="title" name="item_title" value="{{item_title}}" class="form-control"/>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="description" rows="5" cols="30" class="form-control">{{description}}</textarea>
    </div>

    <div class="mb-3">
        <label for="keywords" class="form-label">Keywords</label>
        <input id="keywords" name="keywords" value="{{keywords}}" class="form-control" />
        <div class="form-text">Keywords must be comma seperated</div>
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input id="price" name="price" type="number" value="{{price}}" class="form-control"/>
    </div>

    <div class="mb-3">
        <label for="pick_up_method" class="form-label">Pick Up Method</label>
        <input id="pick_up_method" name="pickUpMethod" value="{{pickUpMethod}}" class="form-control"/>
    </div>

    <div class="mb-3">
        <label for="sold" class="form-label">Sold:</label>

        <select name="sold" id="sold" class="form-select">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
    </div>

    {{!-- photos! --}}

    <button type="submit" class="btn btn-success">Update Item</button>
</form>

<a href="/items/{{id}}" class="btn btn-secondary">Back</a>