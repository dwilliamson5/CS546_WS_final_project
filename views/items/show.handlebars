<h3>Comments</h3>

<div id="comments-list">
    {{#if comments}}
        {{#each comments}}
          <div class="d-flex">
            <img
            src="{{photo}}"
            alt="{{username}}"
            class="me-3 rounded-circle"
            style="width: 60px; height: 60px;"
            />
            <div>
              <h5 class="fw-bold">
                {{username}}
              </h5>
              <p>
                {{text}}
              </p>
            </div>
          </div>
        {{/each}}
    {{else}}
        <p>There are no comments yet. Be the first to add one below!</p>
    {{/if}}
</div>

<h3>Add a comment</h3>

<form action="/items/{{itemId}}/comment" method="POST" id="new-comment-form">
    <div class="mb-3">
        <label id="comment-label" for="comment" class="form-label">Comment text</label>
        <textarea id="comment" name="comment" rows="5" cols="30" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Post Comment</button>
</form>

{{!-- Make a bid --}}
<h3>Bids</h3>

<div id="bids-list">
    {{#if bids}}
        {{#each bids}}
          <div class="d-flex">
            <img
            src="{{photo}}"
            alt="{{username}}"
            class="me-3 rounded-circle"
            style="width: 60px; height: 60px;"
            />
            <div>
              <h5 class="fw-bold">
                {{username}}
              </h5>
              <p>
                {{text}}
              </p>
            </div>
          </div>
        {{/each}}
    {{else}}
        <p>There are no bids yet. Be the first to add one below!</p> {{!-- only buyers can see this --}}

    {{/if}}
</div>

<h3>Add a bid</h3>

<form action="/items/{{itemId}}/bid" method="POST" id="new-bid-form">
    <div class="mb-3">
        <label id="bid-label" for="bid" class="form-label">Make a Bid</label>
        <input id="bid" name="bid" class="form-control" value="{{bid}}"/>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>

